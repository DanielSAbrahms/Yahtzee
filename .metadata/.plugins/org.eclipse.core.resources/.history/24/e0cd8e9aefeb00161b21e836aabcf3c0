import java.util.*;
public class ScoreCard {

	ScoreCardLine line[];
	
	public ScoreCard() {
		line = new ScoreCardLine[13];
		String names[] = {"Aces", "Twos", "Threes", "Fours", "Fives", "Sixes", 
				"3 of a Kind", "4 of a Kind", "Full House", "Sm. Straight", "Lg. Straight",
				"Yahtzee", "Chance"};
		int pointValues[] = {
		 
	}
	
	public void checkScore(Dice[] hand) {
		
	}
	
	private int totalOfNum(int num, Dice[] hand) {
		int sum = 0;
		for (int i = 0; i < hand.length; i++) {
			if (hand[i].getValue() == num) {
				sum++;
			}
		}
		return sum;
	}
	
	private boolean isThreeOfKind(int num, Dice[] hand) {
		if (totalOfNum(num, hand) == 3) {
			return true;
		} 
		return false;
	}
	private boolean isFourOfKind(int num, Dice[] hand) {
		if (totalOfNum(num, hand) == 4) {
			return true;
		}
		return false;
	}
	private boolean isYahtzee(int num, Dice[] hand) {
		if (totalOfNum(num, hand) == 5) {
			return true;
		}
		return false;
	}
	private boolean isSmallStraight(Dice[] hand) {
		for (int i = 0; i < hand.length-2; i++) {
			if (hand[i].getValue() != hand[i+1].getValue()) {
				break;
			}
		}
		for (int i = 1; i < hand.length-1; i++) {
			if (hand[i].getValue() != hand[i+1].getValue()) {
				return false;
			}
		}
		return true;
	}
	private boolean isLargeStraight(Dice[] hand) {
		for (int i = 0; i < hand.length-1; i++) {
			if (hand[i].getValue() != hand[i+1].getValue()) {
				return false;
			}
		}
		
		return true;
	}
	private boolean isFullHouse(Dice[] hand) {
		if (hand[0].getValue() == hand[1].getValue() && hand[1].getValue() == hand[2].getValue()
				&& hand[3].getValue() == hand[4].getValue()) {
			return true;
		}
		if (hand[2].getValue() == hand[3].getValue() && hand[3].getValue() == hand[4].getValue()
				&& hand[0].getValue() == hand[1].getValue()) {
			return true;
		}
		return false;
	}
}
