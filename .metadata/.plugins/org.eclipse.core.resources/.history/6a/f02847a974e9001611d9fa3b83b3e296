import java.util.*;
/** 
 * @author Daniel
 *
 */
public class Dice {
	int range;
	int value;
	boolean kept;
	
	public Dice(){
		
	}
	
	public void roll(){
		Random r = new Random();
		value = r.nextInt(6+1) % range + 1;
	}
	
	public void setRange(int newRange) {
		range = newRange;
	}
	
	public int getRange() {
		return range;
	}
	
	public void setValue(int newValue) {
		value = newValue;
	}
	
	public int getValue() {
		return value;
	}
	public void setKept(boolean newKept) {
		kept = newKept;
	}
	
	public boolean getKept() {
		return kept;
	}
	
}
